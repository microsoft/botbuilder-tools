    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/bin/index.js",
            "cwd": "${env:TEMP}/sandwich.out",
            "args": [
                "--dialogs"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/bin/**/*.js"
            ]
        }
    ]
}